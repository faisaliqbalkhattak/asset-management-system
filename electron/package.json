{
  "name": "asset-management-system-desktop",
  "version": "1.0.0",
  "description": "Asset Management System - Offline Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "cd ../frontend && npm install && npm run build && cd ../backend && npm install",
    "dist": "npm run prebuild && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.pms.app",
    "productName": "Asset Management System",
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!scripts/**",
          "!node_modules/.cache/**"
        ]
      },
      {
        "from": "../frontend/build",
        "to": "frontend-build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  }
}
